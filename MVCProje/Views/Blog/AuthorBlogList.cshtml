@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string durum = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog Listem</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlık
                            </th>
                            <th>
                                Blog Değerlendirme Oranı
                            </th>
                            <th style="width: 20%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                durum = "Çok İyi";
                            }
                            else if (item.BlogRating >= 70 && item.BlogRating <= 84)
                            {
                                color = "post-category text-white bg-secondary mb-3";
                                durum = "Başarılı";
                            }
                            else if (item.BlogRating >= 50 && item.BlogRating <= 69)
                            {
                                color = "post-category text-warning bg-danger mb-3";
                                durum = "Fena Değil";
                            }
                            else if (item.BlogRating >= 0 && item.BlogRating <= 49)
                            {
                                color = "post-category text-white bg-succes mb-3";
                                durum = "Vasat";
                            }
                            <tr>
                                <td>@item.BlogID</td>
                                <td>@item.BlogTitle</td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width: @item.BlogRating%">
                                        </div>
                                    </div>
                                    <small>
                                        Aldığı Puan:@item.BlogRating
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-@color">@durum</span>
                                </td>
                                <td>
                                    <a class="btn btn-info btn-sm" style="width: 20%" href="/Blog/UpdateBlog/@item.BlogID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-sm" style="width: 20%" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <a href="/Blog/AddNewBlog/" class="btn btn-primary">Yeni Blog Yaz</a>
</body>
</html>





